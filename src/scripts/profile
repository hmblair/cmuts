#!/bin/bash

# set -euo pipefail

# Check if dependencies are installed
command -v samtools >/dev/null 2>&1 || { echo >&2 "Samtools is required but it's not installed. Exiting."; exit 1; }
command -v mpirun >/dev/null 2>&1 || { echo >&2 "MPI (mpirun) is required but it's not installed. Exiting."; exit 1; }

__time() {
    # Use GNU time (gtime on macOS via homebrew, time on Linux)
    if command -v gtime &>/dev/null; then
        gtime --format "%e %M" "$@" 2>&1 > /dev/null
    elif command -v time &>/dev/null; then
        command time --format "%e %M" "$@" 2>&1 > /dev/null
    else
        echo "Error: GNU time not found. Install with 'brew install gnu-time' (macOS) or ensure 'time' is installed (Linux)." >&2
        exit 1
    fi
}

generate() {
    local REFERENCES=$1
    local QUERIES=$2
    local LENGTH=$3
    local OUTPUT=$4
    local MIN_MAPQ=$5
    local MIN_PHRED=$6
    local MIN_LENGTH=$7
    local MAX_LENGTH=$8
    local MAX_INDEL=$9
    local WINDOW=${10}
    local COLLAPSE=${11}
    local THREADS=${12}

    local BASE="aln_${REFERENCES}_${QUERIES}_${LENGTH}"
    local FASTA="seq_${REFERENCES}_${QUERIES}_${LENGTH}.fasta"

    if [ ! -f ${BASE}.bam ]; then

        cmuts generate \
            --length ${LENGTH} \
            --queries ${QUERIES} \
            --references ${REFERENCES} \
            --out-fasta ${FASTA} \
            -o ${BASE} \
            --out-h5 ${OUTPUT} \
            --min-mapq ${MIN_MAPQ} \
            --min-phred ${MIN_PHRED} \
            --min-length ${MIN_LENGTH} \
            --max-length ${MAX_LENGTH} \
            --max-indel-length ${MAX_INDEL} \
            --quality-window ${WINDOW} \
            --collapse ${COLLAPSE} \
            --bam --cram --sam

    fi
}

profile() {
    local RUNS=$1
    local FASTA=$2
    local OUTPUT=$3
    local MIN_MAPQ=$4
    local MIN_PHRED=$5
    local WINDOW=$6
    local MIN_LENGTH=$7
    local MAX_LENGTH=$8
    local MAX_INDEL=$9
    local BAM=${10}
    local RF_DIR=${11}
    local THREADS=${12}
    local LOWMEM=${13}
    local USE_CRAM=${14}

    min_time=""
    min_mem=""

    if [[ $USE_CRAM -eq 1 ]]; then
        FILE="aln_${REFERENCES}_${QUERIES}_${LENGTH}.cram"
    else
        FILE="aln_${REFERENCES}_${QUERIES}_${LENGTH}.bam"
    fi


    for ((i=0; i<${RUNS}; i++)); do

        result=$(__time mpirun -np ${THREADS} cmuts core \
            --fasta ${FASTA} \
            --output ${OUTPUT} \
            --min-mapq ${MIN_MAPQ} \
            --min-phred ${MIN_PHRED} \
            --quality-window ${WINDOW} \
            --min-length ${MIN_LENGTH} \
            --max-length ${MAX_LENGTH} \
            --max-indel-length ${MAX_INDEL} \
            --overwrite \
            ${LOWMEM} \
            ${FILE})

        rm -rf ${CMUTS_H5}

        exec_time=$(echo $result | cut -d' ' -f1)
        mem_usage=$(echo $result | cut -d' ' -f2)

        if [[ -z "$min_time" || $(echo "$exec_time < $min_time" | bc -l) -eq 1 ]]; then
            min_time=$exec_time
        fi

        if [[ -z "$min_mem" || "$mem_usage" -lt "$min_mem" ]]; then
            min_mem=$mem_usage
        fi


    done

    FACTOR="/ 1024"
    min_mem=$(echo "scale=2; $min_mem $FACTOR" | bc)

    echo "   cmuts:"
    echo "    Execution time:    $min_time seconds"
    echo "    Peak memory usage: $min_mem KB"

    min_time=""
    min_mem=""

    for ((i=0; i<${RUNS}; i++)); do

        rm -rf ${RF_DIR}
        mkdir ${RF_DIR}
        cd ${RF_DIR}

        result=$(__time rf-count -m \
            -wt ${THREADS} \
            -f ../${FASTA} \
            --fast \
            --eval-surrounding \
            --no-cov-low-qual \
            --no-discard-duplicates \
            --right-deletion \
            --collapse-consecutive \
            --max-collapse-distance $((COLLAPSE - 1)) \
            --max-edit-distance 1.0 \
            --map-quality ${MIN_MAPQ} \
            --min-quality ${MIN_PHRED} \
            --discard-shorter ${MIN_LENGTH} \
            --max-deletion-len ${MAX_INDEL} \
            --median-quality 0 \
            ../${FILE})

        cd ..

        exec_time=$(echo $result | cut -d' ' -f1)
        mem_usage=$(echo $result | cut -d' ' -f2)

        if [[ -z "$min_time" || $(echo "$exec_time < $min_time" | bc -l) -eq 1 ]]; then
            min_time=$exec_time
        fi

        if [[ -z "$min_mem" || "$mem_usage" -lt "$min_mem" ]]; then
            min_mem=$mem_usage
        fi

    done

    FACTOR=" / 1024"
    min_mem=$(echo "scale=2; $min_mem $FACTOR" | bc)

    echo "   rf-count:"
    echo "    Execution time:    $min_time seconds"
    echo "    Peak memory usage: $min_mem KB"

    if [[ -n "$SM_DIR" ]]; then

        local SM_PARSER="${SM_DIR}/internals/bin/shapemapper_mutation_parser"
        local SM_COUNTER="${SM_DIR}/internals/bin/shapemapper_mutation_counter"
        local SM_PARSED="_sm_parsed.mut"
        local SM_COUNTS="_sm_counts.txt"
        local SAM_FILE="aln_${REFERENCES}_${QUERIES}_${LENGTH}.sam"

        min_time=""
        min_mem=""

        for ((i=0; i<${RUNS}; i++)); do

            rm -f ${SM_PARSED} ${SM_COUNTS}

            result=$(__time bash -c "\
                ${SM_PARSER} \
                    -i ${SAM_FILE} \
                    -o ${SM_PARSED} \
                    --input_is_unpaired \
                    -m ${MIN_MAPQ} \
                    > /dev/null 2>&1 && \
                ${SM_COUNTER} \
                    -i ${SM_PARSED} \
                    -c ${SM_COUNTS} \
                    -n ${LENGTH} \
                    --warn_on_no_mapped \
                    > /dev/null 2>&1")

            exec_time=$(echo $result | cut -d' ' -f1)
            mem_usage=$(echo $result | cut -d' ' -f2)

            if [[ -z "$min_time" || $(echo "$exec_time < $min_time" | bc -l) -eq 1 ]]; then
                min_time=$exec_time
            fi

            if [[ -z "$min_mem" || "$mem_usage" -lt "$min_mem" ]]; then
                min_mem=$mem_usage
            fi

        done

        rm -f ${SM_PARSED} ${SM_COUNTS}

        FACTOR=" / 1024"
        min_mem=$(echo "scale=2; $min_mem $FACTOR" | bc)

        echo "   shapemapper2:"
        echo "    Execution time:    $min_time seconds"
        echo "    Peak memory usage: $min_mem KB"

    fi

}

RUNS=1
THREADS=1

QUERIES_SET=false
REFERENCES_SET=false
LENGTHS_SET=false
LOWMEM=""
USE_CRAM=0
SM_DIR=""

while [[ "$#" -gt 0 ]]; do
    case $1 in
        --runs) shift
                RUNS=${1:-1}
                ;;
        --threads) shift
                   THREADS=${1:-1}
                   ;;
        --queries) QUERIES_SET=true
                   ;;
        --references) REFERENCES_SET=true
                      ;;
        --lengths) LENGTHS_SET=true
                   ;;
        --low-mem) LOWMEM="--low-mem"
                   ;;
        --cram) USE_CRAM=true
                ;;
        --shapemapper-dir) shift
                           SM_DIR=${1:-""}
                           ;;
        *) echo "Unknown option: $1"
           exit 1
           ;;
    esac
    shift
done

if [[ -n "$SM_DIR" ]]; then
    [[ -x "${SM_DIR}/internals/bin/shapemapper_mutation_parser" ]] || { echo >&2 "shapemapper_mutation_parser not found in ${SM_DIR}/internals/bin/. Exiting."; exit 1; }
    [[ -x "${SM_DIR}/internals/bin/shapemapper_mutation_counter" ]] || { echo >&2 "shapemapper_mutation_counter not found in ${SM_DIR}/internals/bin/. Exiting."; exit 1; }
fi

SCRIPT_DIR=$(pwd)
CASES_DIR=${SCRIPT_DIR}"/.cases"
mkdir -p ${CASES_DIR}

MIN_MAPQ=20
MIN_PHRED=20
WINDOW=2
MIN_LENGTH=2
MAX_INDEL=100
COLLAPSE=2

EXP_H5="expected.h5"
CMUTS_H5="cmuts.h5"
RF_DIR="_rf_count"


pushd ${CASES_DIR} > /dev/null



#
# Profile based on query count
#



if ${QUERIES_SET}; then

    LENGTH=200
    MAX_LENGTH=$((2 * LENGTH))
    REFERENCES=1024

    echo ""
    echo " ─────────────────────────────"
    echo "   THREADS:          $THREADS"
    echo "   REFERENCES:       $REFERENCES"
    echo "   REFERENCE LENGTH: $LENGTH"
    echo " ─────────────────────────────"


    for QUERIES in $((10 ** 2)) $((10 ** 4)) $((10 ** 6)); do

        echo "   QUERIES:          $QUERIES"
        echo " ─────────────────────────────"

        FASTA="seq_${REFERENCES}_${QUERIES}_${LENGTH}.fasta"

        generate "${REFERENCES}" "${QUERIES}" "${LENGTH}" "${EXP_H5}" "${MIN_MAPQ}" "${MIN_PHRED}" "${MIN_LENGTH}" "${MAX_LENGTH}" "${MAX_INDEL}" "${WINDOW}" "${COLLAPSE}" "${THREADS}"
        profile "${RUNS}" "${FASTA}" "${CMUTS_H5}" "${MIN_MAPQ}" "${MIN_PHRED}" "${WINDOW}" "${MIN_LENGTH}" "${MAX_LENGTH}" "${MAX_INDEL}" "" "${RF_DIR}" "${THREADS}" "${LOWMEM}" "${USE_CRAM}"

        echo " ─────────────────────────────"

    done

fi



#
# Profile based on reference count
#



if ${REFERENCES_SET}; then

    LENGTH=200
    MAX_LENGTH=$((2 * LENGTH))
    QUERIES=1024

    echo ""
    echo " ─────────────────────────────"
    echo "   THREADS:          $THREADS"
    echo "   QUERIES:          $QUERIES"
    echo "   REFERENCE LENGTH: $LENGTH"
    echo " ─────────────────────────────"


    for REFERENCES in $((10 ** 2)) $((10 ** 3)) $((10 ** 4)) $((10 ** 5)); do

        echo "   REFERENCES:       $REFERENCES"
        echo " ─────────────────────────────"

        FASTA="seq_${REFERENCES}_${QUERIES}_${LENGTH}.fasta"

        generate "${REFERENCES}" "${QUERIES}" "${LENGTH}" "${EXP_H5}" "${MIN_MAPQ}" "${MIN_PHRED}" "${MIN_LENGTH}" "${MAX_LENGTH}" "${MAX_INDEL}" "${WINDOW}" "${COLLAPSE}" "${THREADS}"
        profile "${RUNS}" "${FASTA}" "${CMUTS_H5}" "${MIN_MAPQ}" "${MIN_PHRED}" "${WINDOW}" "${MIN_LENGTH}" "${MAX_LENGTH}" "${MAX_INDEL}" "" "${RF_DIR}" "${THREADS}" "${LOWMEM}" "${USE_CRAM}"

        echo " ─────────────────────────────"

    done

fi



#
# Profile based on reference length
#



if ${LENGTHS_SET}; then

    REFERENCES=1024
    QUERIES=1024

    echo ""
    echo " ─────────────────────────────"
    echo "   THREADS:          $THREADS"
    echo "   QUERIES:          $QUERIES"
    echo "   REFERENCES:       $REFERENCES"
    echo " ─────────────────────────────"


    for LENGTH in $((10 ** 1)) $((10 ** 2)) $((10 ** 3)) $((10 ** 4)); do

        echo "   REFERENCE LENGTH: $LENGTH"
        echo " ─────────────────────────────"

        FASTA="seq_${REFERENCES}_${QUERIES}_${LENGTH}.fasta"
        MAX_LENGTH=$((2 * LENGTH))

        generate "${REFERENCES}" "${QUERIES}" "${LENGTH}" "${EXP_H5}" "${MIN_MAPQ}" "${MIN_PHRED}" "${MIN_LENGTH}" "${MAX_LENGTH}" "${MAX_INDEL}" "${WINDOW}" "${COLLAPSE}" "${THREADS}"
        profile "${RUNS}" "${FASTA}" "${CMUTS_H5}" "${MIN_MAPQ}" "${MIN_PHRED}" "${WINDOW}" "${MIN_LENGTH}" "${MAX_LENGTH}" "${MAX_INDEL}" "" "${RF_DIR}" "${THREADS}" "${LOWMEM}" "${USE_CRAM}"

        echo " ─────────────────────────────"

    done

fi



popd > /dev/null

