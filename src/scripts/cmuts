#!/bin/bash

print-usage() {
  echo "Usage: $(basename $0) {align|core|normalize|pairwise|visualize|test}"
}

case "$1" in
  -h|--help)
    print-usage
    exit 0
    ;;
  -v|--version)
    DIR=$(dirname $(which cmuts))
    VERSION=$(cat "$DIR/VERSION")
    echo "cmuts version $VERSION"
    exit 0
    ;;
  align)
    cmuts-align "${@:2}"
    ;;
  core)
    cmuts-core "${@:2}"
    ;;
  normalize)
    cmuts-normalize "${@:2}"
    ;;
  pairwise)
    cmuts-pairwise "${@:2}"
    ;;
  visualize)
    cmuts-visualize "${@:2}"
    ;;
  test)
    cmuts-test "${@:2}"
    ;;
  *)
    print-usage
    exit 1
    ;;
esac
